<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    style="@style/rv_main_container">

    <TextView
        android:id="@+id/txt_id"
        style="@style/rv_main_textView"
        android:layout_marginStart="@dimen/size_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="id" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="cursive"
        android:textColor="@color/black_textView"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Time" />

    <ImageView
        android:id="@+id/img_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_panic"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/btn_location"
        app:layout_constraintStart_toStartOf="@+id/btn_location"
        app:layout_constraintTop_toTopOf="@+id/txt_time"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/black_textView"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toStartOf="@id/txt_phone"
        app:layout_constraintStart_toStartOf="@id/innerGuideline"
        app:layout_constraintTop_toBottomOf="@id/txt_time"
        tools:text="Title" />

    <TextView
        android:id="@+id/txt_phone"
        style="@style/rv_main_textView"
        android:layout_marginEnd="@dimen/size_8"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/blue_text_color_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_name"
        tools:text="phone" />

    <TextView
        android:id="@+id/txt_location_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:layout_marginTop="@dimen/margin_4dp"
        app:layout_constraintEnd_toStartOf="@id/btn_location"
        app:layout_constraintStart_toStartOf="@id/innerGuideline"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        tools:text="Location" />

    <ImageButton
        android:id="@+id/btn_location"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="@dimen/size_8"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_location_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_location_address"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txt_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/black_textView"
        android:layout_marginTop="@dimen/margin_4dp"
        app:layout_constraintEnd_toStartOf="@id/btn_location"
        app:layout_constraintStart_toStartOf="@id/innerGuideline"
        app:layout_constraintTop_toBottomOf="@id/txt_location_address"
        tools:text="Comment" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/innerGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>