<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EshcCheck" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/eliteColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash Theme -->
    <style name="splashTheme" parent="Theme.EshcCheck">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!-- ToolBarStyle -->
    <style name="toolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/main_screen</item>
    </style>

    <!-- RecyclerContainerStyle -->
    <style name="rv_main_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_10</item>
        <item name="android:layout_marginEnd">@dimen/size_10</item>
        <item name="android:layout_marginTop">@dimen/size_4</item>
        <item name="android:paddingTop">@dimen/size_8</item>
        <item name="android:paddingBottom">@dimen/size_8</item>
        <item name="android:backgroundTint">@color/rv_main_container_color_selector</item>
        <item name="android:background">@drawable/main_rv_item_shape</item>
    </style>

    <!-- RecyclerTextViewStyle -->
    <style name="rv_main_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/grey_category_textView</item>
    </style>

    <style name="ShapeAppearanceOverlay.CircularBorder" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="btn" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/btn_text_color_selector</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
    </style>

    <style name="AppMaterialButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/button_disabled</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>